{
  "ignore_patterns": [
    ".git",
    ".idea",
    ".vscode",
    "target",
    "build",
    "dist",
    ".venv",
    "__pycache__",
    "*.pyc",
    "*.log",
    "*.swp",
    "*.bak",
    "*.tmp",
    "node_modules",
    "recordings.db*",
    "compare_output",
    "htmlcov",
    ".coverage",
    "coverage.xml",
    "cobertura.xml",
    ".llm_archive"
  ],
  "include_patterns": [
    "*.rs",
    "*.toml",
    "*.md",
    "*.py",
    "*.sh",
    "*.json",
    "Dockerfile",
    "LICENSE"
  ],
  "lenses": {
    "architecture": {
      "description": "High-level code structure and configuration (optimized)",
      "include": [
        "*.py",
        "*.rs",
        "*.js",
        "*.ts",
        "*.json",
        "*.toml",
        "*.yaml",
        "*.yml",
        "Dockerfile",
        "Makefile",
        "README.md"
      ],
      "exclude": [
        "tests/**",
        "test/**",
        "docs/**",
        "htmlcov/**",
        "coverage.xml",
        ".coverage",
        "*.html",
        "*.css",
        "*.txt",
        "CONTEXT.txt",
        "test_vectors/**",
        "research/**",
        "LLM/**",
        ".llm_archive/**",
        "target/**",
        "examples/**",
        "scripts/**",
        "TUTORIAL.md",
        "TESTING.md",
        "PLUGIN_GUIDE.md",
        "QA_INFRASTRUCTURE.md",
        "SYSTEM_INSTRUCTIONS.md",
        "CONTRIBUTING.md",
        "RUST_ROADMAP.md",
        "CHANGELOG.md",
        ".github/**",
        ".claude/**"
      ],
      "truncate_mode": "structure",
      "truncate": 2000,
      "sort_by": "name",
      "sort_order": "asc"
    },
    "docs": {
      "description": "Documentation and guides for pm_encoder",
      "include": [
        "*.md",
        "CHANGELOG.md",
        "LICENSE",
        "examples/**"
      ],
      "exclude": [
        "LLM/**"
      ],
      "truncate_mode": "smart",
      "truncate": 500,
      "sort_by": "name",
      "sort_order": "asc"
    },
    "core": {
      "description": "Core implementation (pm_encoder.py only)",
      "include": [
        "pm_encoder.py"
      ],
      "exclude": [],
      "truncate_mode": "structure",
      "sort_by": "name"
    }
  }
}
